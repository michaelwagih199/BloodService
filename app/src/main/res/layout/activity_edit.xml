<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ofwhite">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_rounded_button_pink"
            android:hint="Enter name"
            android:inputType="text"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="center"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="@dimen/_10ssp" />

        <EditText
            android:id="@+id/edit_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_rounded_button_pink"
            android:hint="Enter number"
            android:inputType="phone"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="center"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="@dimen/_10ssp" />

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_rounded_button_pink"
            android:hint="Enter face book email"
            android:inputType="textEmailAddress"
            android:lines="2"
            android:maxLines="2"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="center"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="@dimen/_10ssp"
           />

        <Spinner
            android:id="@+id/spinnerBloodType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_rounded_button_pink"
            android:textSize="@dimen/_10ssp"
            android:textAlignment="center"
            android:padding="@dimen/_11ssp"
            android:entries="@array/blood_type"
           />
        <Button
            android:id="@+id/btnDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_rounded_button_yellow"
            android:text="Enter Last Date "
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tvLastDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            />
        <EditText
            android:id="@+id/edit_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_rounded_button_pink"
            android:hint="Notes"
            android:inputType="textEmailAddress"
            android:lines="2"
            android:maxLines="2"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="center"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="@dimen/_10ssp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/ic_rounded_button_yellow"
            android:text="Save" />
    </LinearLayout>
</ScrollView>